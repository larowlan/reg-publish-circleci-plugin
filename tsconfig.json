{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./packages",
    "types": ["jest"],
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "ES2018.Promise"],
    "moduleResolution": "node",
    "sourceMap": true,
    "stripInternal": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  }
}
